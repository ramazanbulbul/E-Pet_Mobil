<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/treatment_card"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/post_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/vet_logo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_saglik" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/vet_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="9dp"
                android:padding="8dp"
                android:text="İzmir Veteriner Kliniği"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/vet_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="0dp"
                android:padding="8dp"
                android:text="İşlem Tarihi : 21.03.2019"
                android:textSize="16dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/vet_operation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="0dp"
                android:padding="8dp"
                android:text="İşlem Başlık"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/vet_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="0dp"
                android:padding="8dp"
                android:text="Detay"
                android:textSize="16dp"
                android:textStyle="italic" />

        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>